# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{Makefile,.gitmodules}]
indent_style = tab
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[{Dockerfile,*.bash,*.sh}]
indent_style = space
indent_size = 2

[{*.key,*.crt}]
insert_final_newline = false